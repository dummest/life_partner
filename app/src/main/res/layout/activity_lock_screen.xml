<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_screen_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lock_screen_date_textview"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="년월일"/>
    <TextView
        android:id="@+id/lock_screen_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:text="시분"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="아무곳이나 눌러 종료"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ListView
            android:id="@+id/lock_screen_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selected_border"
            android:layout_margin="50dp"/>


        <TextView
            android:id="@+id/none_plan_textview"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 등록된 일정이 없습니다"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>